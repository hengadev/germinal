# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/germinal

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=germinal-media
S3_PUBLIC_URL=https://germinal-media.s3.amazonaws.com

# Application Configuration
PUBLIC_APP_URL=http://localhost:5173
NODE_ENV=development
PORT=3000

# Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime

# SMTP Configuration (for contact form emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@germinal.com
SMTP_FROM_NAME=Germinal
CONTACT_EMAIL=hello@germinal.com
